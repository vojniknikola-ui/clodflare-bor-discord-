{
  "name": "vacation-tracker-discord-bot",
  "version": "1.0.0",
  "description": "Discord bot for vacation tracking and time management",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "wrangler deploy --dry-run",
    "db:migrate": "wrangler d1 execute vacation-tracker-db --file=./migrations/init.sql",
    "db:backup": "node scripts/d1-backup.js backup",
    "db:restore": "node scripts/d1-backup.js restore",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.{ts,js}"
  },
  "dependencies": {
    "discord-interactions": "^3.4.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@types/node": "^20.10.0",
    "wrangler": "^3.22.4",
    "typescript": "^5.3.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "discord",
    "bot",
    "vacation",
    "tracker",
    "time",
    "management",
    "cloudflare",
    "workers",
    "d1"
  ],
  "author": "Vacation Tracker Team",
  "license": "MIT"
}
